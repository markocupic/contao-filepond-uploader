{
    "name": "markocupic/contao-filepond-uploader",
    "description": "Frontend file uploader widget for Contao CMS Browser-side image transformation",
    "keywords": [
        "filepond",
        "PQINA",
        "fileupload",
        "widget"
    ],
    "type": "contao-bundle",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Marko Cupic",
            "email": "m.cupic@gmx.ch",
            "homepage": "https://github.com/markocupic/contao-filepond-uploader",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/markocupic/contao-filepond-uploader/issues",
        "source": "https://github.com/markocupic/contao-filepond-uploader"
    },
    "require": {
        "php": "^8.2",
        "contao/core-bundle": "^4.13 || ^5.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.12",
        "contao/easy-coding-standard": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Markocupic\\ContaoFilepondUploader\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": false,
            "contao/manager-plugin": false,
            "contao-community-alliance/composer-plugin": true
        }
    },
    "extra": {
        "contao-manager-plugin": "Markocupic\\ContaoFilepondUploader\\ContaoManager\\Plugin"
    },
    "scripts": {
        "cs-fixer": "@php tools/ecs/vendor/bin/ecs check config/ contao/ src/ templates/ tests/ --config tools/ecs/config/default.php --fix --ansi",
        "unit-tests": "@php tools/phpunit/vendor/bin/phpunit -c tools/phpunit/phpunit.xml.dist"
    }
}
